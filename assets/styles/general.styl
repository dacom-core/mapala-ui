html
  height: 100%;
  width: 100%;
  overflow: hidden
  body
    width: 100%;
    overflow-y: scroll;
    overflow-x: hidden;
    height: 100%;


*
  -webkit-overflow-scrolling: touch;

.el-loading-mask
  position: fixed !important

.el-popover {
  border-radius: 5px !important;
  background-color: #5D7293 !important;
  border: none;
  justify-content: space-between;
  display: flex;
  padding: 10px 20px;
  padding-bottom: 20px;
}

.poster__Column {
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  width: 90px;
}

.poster__Column h4 {
  font-family: PTSans;
  font-size: 12px;
  font-weight: bold;
  line-height: 1.5;
  text-align: left;
  color: #ec9eb5;
}

.el-popover .popper__arrow{
  border-bottom-color: #5D7293 !important;
}

.el-popover .popper__arrow::after {
  border-bottom-color: #5D7293 !important;
}


.poster_link {
  transition: .4s ease-out;
  width: 100%;
  cursor: pointer;
  display: block;
  border-radius: 5px;
  text-align: left;
  padding: 3px 1px 3px 1px;
  text-decoration: none;
  color: #8DAFE1 !important;
}
.poster_link:hover {
  background-color: #4c6282;
}

.loading_spinner {
  padding-top: 50px;
  padding-bottom: 50px;
  z-index: 9999;
}

.pac-container {
  top: 43px !important;
  left: 0 !important;
  z-index: 100000;
}


html, body {
  -webkit-overflow-scrolling: touch;
}

